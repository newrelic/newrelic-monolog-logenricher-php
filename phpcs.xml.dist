<?xml version="1.0"?>
<ruleset name="newrelic/monolog-enricher">
    <file>./src</file>
    <file>./tests</file>
    <exclude-pattern>./tests/integration/*/vendor</exclude-pattern>

    <rule ref="PSR12"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="80"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>
</ruleset>
